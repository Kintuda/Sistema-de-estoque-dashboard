@model IEnumerable<enzo_estoqueV1.Models.Venda>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem de vendas</h2>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title">Vendas
                        <a href="@Url.Action("Create", "Vendas", new { id = "homeLink" })"><i class="tim-icons icon-simple-add"></i></a>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="overflow: auto">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Produto.Descricao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th>
                                    Quantidade
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EnderecoDeEntrega)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ValorTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Situacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pagamento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataVenda)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Produto.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantidade)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EnderecoDeEntrega)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ValorTotal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Situacao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pagamento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataVenda)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Deletar", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
