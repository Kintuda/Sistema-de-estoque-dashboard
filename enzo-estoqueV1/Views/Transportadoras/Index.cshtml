@model IEnumerable<enzo_estoqueV1.Models.Transportadora>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem de transportadoras</h2>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title">
                        Tranportadora
                        <a href="@Url.Action("Create", "Tranportadoras", new { id = "homeLink" })"><i class="tim-icons icon-simple-add"></i></a>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="overflow: auto">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cidade)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RazaoSocial)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Contato)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cnpj)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cidade)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RazaoSocial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contato)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cnpj)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
