@model IEnumerable<enzo_estoqueV1.Models.Fornecedor>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem de fornecedores</h2>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header">
                    <h4 class="card-title"> Fornecedores
                        <a href="@Url.Action("Create", "Fornecedors", new { id = "homeLink" })"><i class="tim-icons icon-simple-add"></i></a>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="overflow: auto">
                        <table class="table tablesorter">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.RazaoSocial)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NomeFantasia)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Endereco)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cidade)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CpfCnpj)
                                </th>
                                <th>Ações</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RazaoSocial)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NomeFantasia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Endereco)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cidade)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CpfCnpj)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Deletar", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>